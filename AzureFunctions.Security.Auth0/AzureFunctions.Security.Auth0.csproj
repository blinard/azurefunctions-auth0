<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>
  <PropertyGroup>
    <PackageId>AzureFunctions.Security.Auth0</PackageId>
    <Title>AzureFunctions.Security.Auth0</Title>
    <Authors>brlinard</Authors>
    <Copyright>Copyright Â© Brad Linard 2019</Copyright>
    <PackageIconUrl></PackageIconUrl>
    <PackageTags>auth0;AzureFunctions;azure-functions;Azure Functions;auth 0</PackageTags>
    <RepositoryUrl>https://github.com/blinard/azurefunctions-auth0</RepositoryUrl>
    <PublishRepositoryUrl>true</PublishRepositoryUrl> 
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <NeutralLanguage>en-US</NeutralLanguage>

    <Description>Easily validate Auth0 tokens within an Azure Function.</Description>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Http.Abstractions" Version="2.2.0" />
    <PackageReference Include="Microsoft.IdentityModel.Protocols" Version="5.4.0" />
    <PackageReference Include="Microsoft.IdentityModel.Protocols.OpenIdConnect" Version="5.4.0" />
    <PackageReference Include="Polly" Version="7.1.0" />
    <PackageReference Include="System.IdentityModel.Tokens.Jwt" Version="5.7.0" />
  </ItemGroup>
</Project>
